<% if signed_in? %>
    <div class="row">
        <div class="span4">

            <div class="user-info">
                <%= render 'shared/user_info' %>
            </div>
            <div class="padding-top">
                <%= render 'league_table' %>
            </div>
        </div>
        <div class="span7">
            <%= render 'shared/feed' %>
        </div>
        <div class="span4">
            <%= render 'friends/friends_table', user_friends: @user_friends %>

            <%= render 'friends/requested_friends_list', friend_requests: @friend_requests %>
        </div>
    </div>


<% else %>


<%= render 'shared/splash_form' %>


<% end %>