<% if signed_in? %>
    <div class="row padding-top">
        <div class="col-md-3">

            <%= render 'shared/user_info' %>

            <div class="padding-top">
                <%= render 'league_table' %>
            </div>
        </div>
        <div class="col-md-6">
            <%= render 'shared/feed' %>
        </div>
        <div class="col-md-3">
            <%= render 'friends/friends_table', user_friends: @user_friends %>

            <%= render 'friends/requested_friends_list', friend_requests: @friend_requests %>
        </div>
    </div>


<% else %>


<%= render 'shared/splash_form' %>


<% end %>