<div class="user-profile">

    <div class="avatar-wrapper">
        <%= link_to avatar_for(@user, "large",nil, "200", nil), @user %>
    </div>
    <div class="topframe">
    </div>
    <div class="profile-container">

        <div class="name">
            <%= link_to @user.name, @user %>
        </div>
        <div>
            <table class="profile-stats">
                <tbody>
                <tr>
                    <td> leagues</td>
                    <td> votes created</td>
                    <td> open votes</td>
                </tr>
                <tr>
                    <td width="25%"> <%= @user.leagues.count %></td>
                    <td width="40%"> <%= @user.game_events.count %> </td>
                    <td width="25%"> <%= @user.open_votes.count %> </td>
                </tr>
                </tbody>

            </table>

        </div>
        <div>
            <%= friend_link @user, "long" %>
        </div>
    </div>
</div>