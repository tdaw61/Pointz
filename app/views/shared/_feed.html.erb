<% if @feed_items.any? %>
    <div class="feed">
        <h5 class="feed-list-header"> What's Happening</h5>
        <div class="userposts">
            <%= render partial: 'shared/feed_item', collection: @feed_items %>
        </div>
        <div id="infinite-scrolling">
            <%= will_paginate @feed_items %>
        </div>
    </div>
<% else %>
    <div class="feed">
        <h5 class="feed-list-header"> What's Happening</h5>
        <div class="userposts">
            <div class="feed-post-wrapper feed-post-inner">
                There have been no posts yet.
            </div>
        </div>
    </div>
<% end %>