<div class="row padding-top">
    <div class="col-md-3"></div>
    <div class="col-md-6  ">
        <div class="game-form form-horizontal">

            <h1>Edit Game </h1>

            <p style="color: #ff0000"> * Required field </p>

            <%= form_for([@game]) do |f| %>
                <% if @game.errors.any? %>
                    <div id="error_explanation">
                        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

                        <ul>
                            <% @game.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>


                <div class="form-group">
                    <%= f.label :name, "*Name", class: "control-label col-xs-2" %>
                    <div class="col-xs-6">
                        <%= f.text_field :name, class: "form-control", placeholder: "Email" %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label :motto, "Motto", class: "control-label col-xs-2" %>
                    <div class="col-xs-6">
                        <%= f.text_field :motto, class: "form-control", placeholder: "Motto" %>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :end_date, "End Date ", class: "control-label col-xs-2" %>
                    <div class="col-xs-6">
                        <div class="input-group">
                            <%= f.text_field :end_date, value: (@game.end_date.strftime(" %m/%d/%y") if @game.end_date), 'data-behaviour' => 'datepicker', :class => "datepicker form-control", :size => "16" %>
                            <span class="input-group-addon" data-behavior = 'datepicker' id="datepicker-icon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <%= f.label :score_cap, "Score Cap ", class: "control-label col-xs-2" %>
                    <div class="col-xs-6">
                        <%= f.text_field :score_cap, class: "form-control" %>
                    </div>
                </div>


                <div class="col-xs-offset-1">
                    <span><%= f.label :point_tiers, "Fixed point system (Optional)", class: "control-label" %> </span>

                    <label class="radio ">
                        <%= radio_button :game, :point_tiers, 0, :checked => true %> Fixed Scoring
                    </label>
                    <label class="radio ">
                        <%= radio_button :game, :point_tiers, 1 %> Free Scoring
                    </label>

                </div>

                <div class="">
                    <div class="danger-box margin-left">
                        <div>Danger zone</div>
                        <%= link_to "End this game", end_game_path, {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window', class: "btn btn-sm btn-primary btn-danger"} %>
                        <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="endGameWindow" aria-hidden="true"></div>
                    </div>
                </div>

                <div class="form-btns ">
                    <%= f.submit "Save", class: "btn btn-primary btn-danger block padding-top" %>
                    <%= link_to "Cancel", :back, class: "btn btn-primary btn-danger" %>
                </div>

            <% end %>
        </div>
    </div>

</div>

