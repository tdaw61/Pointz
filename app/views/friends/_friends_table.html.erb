<div class="friend-box">
    <div class="header">
        <div class="pad">
            Friends
        </div>
    </div>
    <div class="pad">
        <ul class="friend-list">
            <% if user_friends.empty? %>
                <li> You have no friends... </li>
            <% else %>
                <%= render partial: "friends/friend", collection: user_friends %>
            <% end %>
        </ul>
    </div>
</div>