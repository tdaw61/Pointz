<h1 class="no-margin"> << <%= @league.name %> >> <% if !@league.active %> (Inactive) <% end %></h1>
<div class="row">
    <div class="col-md-3">

        <%= render 'league_info', league: @league %>

        <div class="games-table">
            <div class="topframe-table">
                <div>Current games <span class="glyphicon glyphicon-chevron-down icon-white"></span>
                    <ul class="pts-header">
                        <li title="Points">Pts</li>
                        <li title="Position">Pos</li>
                    </ul>
                </div>

            </div>

            <ul class="games-list">


                <% if @games.empty? %>
                    <li> You have no games yet. <%= link_to "Start one now", new_league_game_path(@league) %></li>

                <%
                   else
                     @games.each do |game|
                %>
                        <li>
                            <div class="inline game-title">
                                <%= link_to game.name, game %>
                            </div>
                            <div class="float-right pts-pos-entry">
                                <ul>
                                    <li>
                                        <%= game.points current_user %>
                                    </li>
                                    <li>
                                        <%= game.position current_user %>
                                    </li>
                                </ul>
                            </div>

                            <div style="clear: both; height: 1px"></div>
                        </li>

                    <%
                       end
                       end
                    %>
            </ul>
        </div>

        <% if @league.active %>
            <p> <%= link_to "New Game", new_league_game_path(@league), class: "btn btn-sm btn-primary btn-danger" %></p>
        <% end %>
    </div>

    <div class="col-md-6">
        <div class="feed feed-left " id="feed">
            <%= render 'shared/feed' %>
        </div>
    </div>

    <div class="col-md-3">


        <div class="league-users">
            <table class="table table-striped table-bordered table-condensed table-hover ">
                <thead>
                <tr>
                    <th colspan="2">Users</th>
                </tr>
                </thead>
                <% @league_users.each do |user| %>
                    <tr>
                        <td title="<%= user.name %>"><%= link_to user.name, user_path(user) %> </td>
                        <% if @league.is_admin(current_user) %>
                        <% end %>
                    </tr>
                <% end %>

            </table>
        </div>

        <% if @league.active %>

            <%= link_to "Add User", add_user_path, {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window', class: "btn btn-sm btn-primary btn-danger"} %>
            <% if @league.is_admin(current_user) %>
                <%= link_to "Remove User", remove_user_path, {:remote => true, 'data-toggle' => "modal", 'data-target' => '#modal-window', class: "btn btn-sm btn-primary btn-danger"} %>
                <div id="modal-window" class="modal hide fade" role="dialog" aria-labelledby="UserWindow" aria-hidden="true"></div>

        <% end %>
        <% end %>

    </div>
</div>
